

<script type="text/javascript">

    $(document).ready(function () {

        $("button[name='enviar-form']").click(function (event) {

            if ($("input[name='inputProjeto']").val().length < 1) {
                $("#alert_dialog_msg").html("Informe o nome do projeto.");
                $("#alert_dialog").dialog('open');
            } else if ($("input[name='inputProblema']").val().length < 1) {
                $("#alert_dialog_msg").html("Informe o nome do problema.");
                $("#alert_dialog").dialog('open');
            } else if ($("input[name='inputResposta']").val().length < 1) {
                $("#alert_dialog_msg").html("Informe o tempo de resposta.");
                $("#alert_dialog").dialog('open');
            } else if ($("input[name='inputSolucao']").val().length < 1) {
                $("#alert_dialog_msg").html("Informe o tempo de solução.");
                $("#alert_dialog").dialog('open');
            } else {
                var id = $("input[name='inputID']").val();
                if (id == 0) {
                    $.ajax({
                        url: '<?= HTTP . '/ProjetosProblemas/relacaoUsuarios'; ?>',
                        data: 'id=' + id,
                        type: 'POST',
                        success: function (data) {
                            $('#participantes').html(data);
                        }
                    });
                } else {
                    $("form[name='projeto-problemas']").submit();
                }
            }
        });

    });

</script>

