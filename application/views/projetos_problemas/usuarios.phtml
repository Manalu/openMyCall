
<div id="usuarios_projeto" title="Adicionar Participantes">

    <div class="form-horizontal">
        <div id="relacao_usuarios"></div>

        <div class="form-group">
            <label for="textProjeto" class="control-label col-xs-2">
                Descrição do projeto (Opcional):
            </label>
            <div class="col-xs-10">
                <textarea class="form-control" id="textProjeto" name="textProjeto" placeholder="Descrição do projeto" maxlength="500"><?= trim($descricao_projeto) ?></textarea>
            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $(document).ready(function () {

        var dialog = $('#usuarios_projeto').dialog({
            width: 1000,
            modal: true,
            buttons: {
                "Salvar": function () {
                    $('#destiny option').prop('selected', true);

                    $("input[name='relacaoParticipantes']").val($('#destiny').val());
                    $("input[name='descricaoProjeto']").val($('#textProjeto').val());

                    $("form[name='projeto-problemas']").submit();
                }, "Cancelar": function () {
                    dialog.dialog('close');
                }
            }
        });

        var origin = JSON.parse('<?= json_encode($usuarios) ?>');
        var destiny = JSON.parse('<?= json_encode($participantes) ?>');

        $('#relacao_usuarios').multiSelectTransfer({
            origin: origin,
            destiny: destiny
        });

    });
</script>
